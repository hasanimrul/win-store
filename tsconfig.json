{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "public/animations.js", "src/templates/Main.jsx", "src/components/layouts/jobForm/CvSubmitPopup.js", "src/lib/MultiViewGoogleMap.js", "src/components/patterns/AllNews/NewsMasonry.tsx", "src/components/layouts/header/navbar/NavBar.jsx", "src/components/layouts/header/mobileMenu/Sidebar.jsx", "src/pages/index.jsx", "src/pages/_app.jsx", "src/pages/_document.jsx", "src/pages/contact.jsx", "src/pages/newsFeed.jsx", "src/pages/newsDetails.jsx"],
  "exclude": ["node_modules"]
}
